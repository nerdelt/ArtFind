@page "{id:int?}"
@model artfind.Pages.Artists.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Artist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Artist.ID" />
            <div class="form-group">
                <label asp-for="Artist.FirstName" class="control-label"></label>
                <input asp-for="Artist.FirstName" class="form-control" />
                <span asp-validation-for="Artist.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.LastName" class="control-label"></label>
                <input asp-for="Artist.LastName" class="form-control" />
                <span asp-validation-for="Artist.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Birthdate" class="control-label"></label>
                <input asp-for="Artist.Birthdate" class="form-control" />
                <span asp-validation-for="Artist.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Nationality" class="control-label"></label>
                <input asp-for="Artist.Nationality" class="form-control" />
                <span asp-validation-for="Artist.Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Gender" class="control-label"></label>
                <select asp-for="Artist.Gender" class="form-control" asp-items="@Html.GetEnumSelectList<artfind.Models.Gender>()"></select>
                <span asp-validation-for="Artist.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
